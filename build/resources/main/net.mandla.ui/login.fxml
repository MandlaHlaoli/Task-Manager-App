<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #E8F0FE;" xmlns="http://javafx.com/javafx/19">

    <HBox >
        
    <VBox  style="-fx-background-color: #E8F0FE;" spacing="10" layoutX="50" >
        <Label style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Login" />

        <Label style="-fx-font-weight: bold;" text="Username:" />
        <TextField fx:id="tfUsername" prefWidth="200" />

        <Label style="-fx-font-weight: bold;" text="Password:" />
        <PasswordField fx:id="pfPassword" prefWidth="200" />

       <HBox alignment="CENTER" spacing="10" layoutX="30"  >
        <Button fx:id="loginButton" style="-fx-background-color: #2F80ED; -fx-text-fill: white;" text="Login" />
        <Button fx:id="registerButton" style="-fx-background-color: #2F80ED; -fx-text-fill: white;" text="Register" />
       </HBox>
        <Label fx:id="errorMessageLabel" style="-fx-text-fill: #ED2F2F;" />
       
        </VBox  >
        
        <VBox   prefHeight="400" prefWidth="1000" style="-fx-background-color: #F0E6FF" alignment="CENTER" spacing="10" layoutX="50" >
        
       <ImageView fitWidth="400" fitHeight="400" >
        <image >
            <Image url="images/task.png" />
        </image>
    </ImageView>
        </VBox>
        
    </HBox>
</AnchorPane>

